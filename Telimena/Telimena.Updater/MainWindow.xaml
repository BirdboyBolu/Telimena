<Window x:Class="Telimena.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telimena.Updater"
        mc:Ignorable="d"
        Name="ThisUc"
        Title="{Binding ElementName=ThisUc, Path=TitleLabel}" Height="200" Width="400">

    <Grid>
        <StackPanel >
            <TextBlock Text="Update installer minimum version. Not for production usage." Foreground="Red" HorizontalAlignment="Center" Margin="15,3,15,25"/>
            <TextBlock Text="An update to version" HorizontalAlignment="Center" />
            <TextBlock FontSize="16" Text="1.2.34.4" FontWeight="Bold" HorizontalAlignment="Center"  ></TextBlock>
            <TextBlock Text="was downloaded." HorizontalAlignment="Center" />

            <Button Content="Install now!" Click="ButtonBase_OnClick" Margin="15" FontSize="18"/>
        </StackPanel>
    </Grid>
</Window>
