@using Telimena.WebApp.Models.Shared
@model Telimena.WebApp.Core.DTO.AllProgramsSummaryData
<!-- Small boxes (Stat box) -->
<div class="row">
    <!-- ./col -->
    @Html.Partial("_InfoBox", new BoxViewModel {BackgroundColorClass = "bg-yellow", IconClass = "fa-users", Label = "Total Applications Users",
        Value = Model.TotalAppUsersCount.ToString(), SecondaryLabel = "Users registered in last 7 days: " + Model.AppUsersRegisteredLast7DaysCount})

    @Html.Partial("_InfoBox", new BoxViewModel {BackgroundColorClass = "bg-aqua", IconClass = "fa-magic", Label = "All tracked events",
        Value = Model.TotalEventsCount.ToString(), SecondaryLabel = "Usage count: " + Model.TotalEventUsageCount})
   
    @Html.Partial("_InfoBox", new BoxViewModel {BackgroundColorClass = "bg-green", IconClass = "fa-object-group", Label = "All tracked views",
        Value = Model.TotalViewsCount.ToString(), SecondaryLabel = "Usage count: " + Model.TotalViewsUsageCount})

    @Html.Partial("_InfoBox", new BoxViewModel {BackgroundColorClass = "bg-red", IconClass = "fa-exclamation-triangle", Label = "Most common exception",
        Value = Model.MostPopularExceptionInLast7Days, SecondaryLabel = "Exceptions in last 7 days: " + Model.TotalExceptionsInLast7Days})

</div>