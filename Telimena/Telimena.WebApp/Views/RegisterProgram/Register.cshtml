@model Telimena.WebApp.Models.Developer.RegisterProgramViewModel
@{
    ViewBag.Title = "Claim App";
}

<div class="row">

    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Register application</h3>
            </div>
            <div class="box-body">
                @if (Model != null && Model.IsSuccess)
                {
                    <label class="label label-success">Ownership claimed successfully!</label>
                }
                <section>
                    @using (Html.BeginForm("Register", "RegisterProgram", FormMethod.Post, new {role = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-group">
                            @Html.LabelFor(m => m.ProgramName, new {@class = "control-label"})
                            @Html.TextBoxFor(m => m.ProgramName, new {@class = "form-control"})
                        </div>
                        <div class="form-group">
                            <div class="">
                                <input type="submit" value="Submit request" class="btn btn-primary"/>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>
