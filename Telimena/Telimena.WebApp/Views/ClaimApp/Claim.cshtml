@model Telimena.WebApp.Models.Developer.ClaimAppViewModel
@{
    ViewBag.Title = "Claim App";
}

<h2>Claim ownership of application</h2>
<div class="row">

    <div class="col-md-8">
        @if (Model != null && Model.IsSuccess)
        {
            <label class="label label-success">Ownership claimed successfully!</label>
        }
        <section id="passwordForm">
            @using (Html.BeginForm("Claim", "ClaimApp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.AppName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AppName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit request" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
